<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listener"
            type="com.example.quanlythuchi.view.main.report.ReportListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/materialToolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:elevation="@dimen/dp12"
            android:text="@string/report"
            android:textColor="@color/black80"
            android:textSize="@dimen/sp22"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/materialToolbar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:background="@drawable/ic_search"
            android:elevation="@dimen/dp12"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/materialToolbar2"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialToolbar2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp181"
                android:elevation="@dimen/dp5"
                android:translationZ="@dimen/dp5"
                android:layout_marginHorizontal="@dimen/dp15"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_gradient">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/icon_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:src="@drawable/ic_money"
                    app:layout_constraintVertical_bias="0.15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Cường"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp10"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_other"
                    app:layout_constraintStart_toEndOf="@id/icon_other"
                    app:layout_constraintTop_toTopOf="@+id/icon_other" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:gravity="center_vertical"
                    android:text="Tổng số dư"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_other" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="@dimen/sp30"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="start|center_vertical"
                    android:text=" + 1.000.000 đ"
                    android:textColor="@color/white"
                    app:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/sp30"
                    android:textStyle="bold"
                    app:autoSizeStepGranularity="1sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView22"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    app:layout_constraintVertical_bias="0.2">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp10"
                android:weightSum="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group_income"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp95"
                    android:layout_marginHorizontal="@dimen/dp5"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_expense_income_balance">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/view"
                        app:layout_constraintEnd_toEndOf="@+id/view"
                        app:layout_constraintStart_toStartOf="@+id/view"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeableImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/green_B8D8C1"
                            android:src="@drawable/ic_down"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.4"
                            app:shapeAppearanceOverlay="@style/circleImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/materialTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/income"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
                            app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/total_income"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0.00 đ"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
                            app:layout_constraintTop_toBottomOf="@+id/materialTextView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginHorizontal="@dimen/dp15"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.85"
                        tools:layout_editor_absoluteX="15dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group_expense"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp95"
                    android:layout_marginHorizontal="@dimen/dp5"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_expense_income_balance"
                    android:backgroundTint="@color/red_back_expense">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/line_red"
                        app:layout_constraintEnd_toEndOf="@+id/line_red"
                        app:layout_constraintStart_toStartOf="@+id/line_red"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/icon_expense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/red_E1B9BB"
                            android:src="@drawable/ic_up"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.4"
                            app:shapeAppearanceOverlay="@style/circleImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/label_expense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/expense"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/icon_expense"
                            app:layout_constraintTop_toTopOf="@+id/icon_expense" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/total_expense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0.00 đ"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/icon_expense"
                            app:layout_constraintTop_toBottomOf="@+id/label_expense" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line_red"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginHorizontal="@dimen/dp15"
                        android:layout_weight="1"
                        android:background="@color/red_d61c1c"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.85"
                        tools:layout_editor_absoluteX="15dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group_day"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_back_day"
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pick_time"
                    app:layout_constraintTop_toTopOf="@+id/pick_time" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next_day"
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_next"
                    app:layout_constraintBottom_toBottomOf="@+id/pick_time"
                    app:layout_constraintStart_toEndOf="@+id/pick_time"
                    app:layout_constraintTop_toTopOf="@+id/pick_time" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pick_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_date"
                    android:backgroundTint="@color/green_background_incomeDBE5E6"
                    android:gravity="center"
                    android:onClick="@{v -> listener.openDayPicker()}"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_report"
            android:layout_width="300dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:tabIndicatorAnimationDuration="@integer/material_motion_duration_medium_1"
            app:tabIndicatorColor="@color/orange"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="@color/orange"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpg"
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout_report" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>